// Mobile (portrait)
@media only screen and (max-width: 767px)
	*
		font-size 16px
	body
		background amarillo_fondo
	article
		width 17em
	.codigo
		border-top 1px solid black

// Mobile (landscape)
@media only screen and (min-width: 480px) and (max-width: 767px)
	*
		font-size 16px		
	body
		background rojo_fondo
	#cabecera h1
		font-size 24px
	article
		width 38em
	#menu li
		display inline-block
		font .9em 'Josefin Sans', cursive
		list-style none	
		margin-bottom .1em
		margin-top .1em
		padding-left .4em
		padding-right .4em
		background #DDD
		border-radius 20px
		border 1px solid #000

// Tablet (portrait)
@media only screen and (min-width: 768px)
	*
		font-size 16px
	body
		background verde_fondo
	#menu li
		background #DDD
		border 1px solid #000
		border-radius 20px
		display inline-block
		list-style none	
		margin-bottom .2em
		margin-top .2em
		padding-left .8em
		padding-right .8em
	article
		width 40em

