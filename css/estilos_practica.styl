/*
*	======================================================================
*	Definición de la paleta de colores
*	======================================================================
*/

verde_fondo = #D3E4D3
amarillo_fondo = #EAE3C1
rojo_fondo = #CA6F56
color_cabecera = #213857
color_pie_pagina = #697880
color_texto_cabecera = #B9CAD1

/*
*	======================================================================
*/

*
	margin 0
	padding 0
	font bold 24px verdana, sans-serif
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box

header, nav, section, article, figure, figcaption, address, aside, footer
	display block

a
	display block
	text-decoration none
	text-transform uppercase
	
h1
	font-family 'Josefin Sans', sans-serif;

h2
	font bold 1em verdana, sans-serif
p
	font normal 0.75em verdana, sans-serif

article
	background #55F
	display inline-block
	border 2px solid gray
	margin-bottom 1rem
	text-align left

article:nth-child(odd)
	background #E5E5E5
	& footer
		background #A7CEDA
		padding 0.5rem 1.4rem
	
article:nth-child(even)
	background #A7CEDA
	& footer
		background #E5E5E5
		padding 0.5rem 1.4rem		

aside
	border 2px solid red
	background #CCC
	float left
	margin-top 1rem
	margin-left 1rem
	padding 10px

body
	background #F4F5F7
	text-align center

nav
	border 1px solid #ABA9A9
	
p
	margin 0

section
	text-align center
	float left
	margin 1em

time
	color #999
	
figcaption
	font italic 14px verdana, sans-serif
	
#cabecera
	text-align center
	background color_cabecera
	color color_texto_cabecera
	padding 20px
	& h1
		font-size 1.5em

#contenedor_principal 
	text-align center
	
#menu
	margin 0
	padding 0
	background #CCC
	& li
		list-style none
		border-bottom 1px solid black		
		padding .1em
		padding-left 1em
		text-align center
		& a
			font bold 1em 'Josefin Sans', sans-serif
	& ul li:hover
		background #C2DED0
	
#pie
	background color_pie_pagina
	border-top 2px solid #000
	color color_texto_cabecera
	clear both
	padding 20px
	text-align center
	& small
		font bold 14px 'Josefin Sans', cursive
	& p
		font 18px 'Josefin Sans', cursive
	& a::before, a::after
		content " - "
#pie a
	color white
		
.post
	padding 1.4rem

/*
*	=========================================================================
*	Estilos para la página de "propiedades_css.html"
*
*	=========================================================================
*/
#recuadro
	// Color de fuente con gradiente
	background -webkit-radial-gradient(center, ellipse, #FFFFFF 20%,#006699 150%)
	background -moz-radial-gradient(center, ellipse, #FFFFFF 20%,#006699 150%)
	background -ms-radial-gradient(center, ellipse, #FFFFFF 20%,#006699 150%)
	// background linear-gradient(top,#FFFFFF,#006699)
	// background #DDD
	width 15em
	margin 1em auto
	padding 1em
	text-align center
	border 1px solid #999
	// Border redondeado
	-moz-border-radius 20px
	-webkit-border-radius 20px / 20px
	-border-radius 20px / 20px
	-ms-border-radius 20px / 20px
	// // Sombras en las cajas
	-moz-box-shadow rgb(150,150,150) 5px 5px 10px inset
	-webkitbox-shadow rgb(150,150,150) 5px 5px 10px inset
	-ms-shadow rgb(150,150,150) 5px 5px 10px inset
	box-shadow rgb(150,150,150) 5px 5px 10px inset
	// Para un segundo borde
	outline 2px dashed #000099
	outline-offset 15px
	// Transforma... amplia el div, article u otra caja
	-moz-transition -moz-transform 1s ease-in-out 0.5s
	-webkit-transition -webkit-transform 1s ease-in-out 0.5s
	-ms-transition -ms-transform 1s ease-in-out 0.5s

#recuadro:hover
	-moz-transform rotate(360deg)
	-webkit-transform rotate(360deg)
	-ms-transform rotate(360deg)
	
#titulo
	font bold 36px verdana, sans-serif
	// text-shadow rgb(150,150,150) 3px 3px 5px
	text-shadow rgba(0,0,0, 0.5) 3px 3px 5px
	color hsla(10, 100%, 50%, 0.8)

.codigo
	padding .5em


// Mobile (portrait)
@media only screen and (max-width: 767px)
	*
		font-size 16px
	body
		background amarillo_fondo
	article
		display block	
		width 17em
	.codigo
		border-top 1px solid black

// Mobile (landscape)
@media only screen and (min-width: 480px) and (max-width: 767px)
	*
		font-size 16px		
	body
		background rojo_fondo
	#cabecera h1
		font-size 24px
	article
		float left
		width 38em
	#menu li
		display inline-block
		font 16px 'Josefin Sans', cursive
		list-style none	
		margin-bottom .1em
		margin-top .1em
		padding-left .4em
		padding-right .4em
		background #DDD
		border-radius 20px
		border 1px solid #000

// Tablet (portrait)
@media only screen and (min-width: 768px)
	*
		font-size 16px
	body
		background verde_fondo
	#menu li
		background #DDD
		border 1px solid #000
		border-radius 20px
		display inline-block
		list-style none	
		margin-bottom .2em
		margin-top .2em
		padding-left .8em
		padding-right .8em
	article
		width 40em

